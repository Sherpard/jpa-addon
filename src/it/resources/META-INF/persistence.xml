<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="unit1" transaction-type="RESOURCE_LOCAL">
        <class>org.seedstack.seed.persistence.jpa.sample.Item1</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>

    <persistence-unit name="unit2" transaction-type="RESOURCE_LOCAL">
        <class>org.seedstack.seed.persistence.jpa.sample.Item2</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>

    <persistence-unit name="unit3" transaction-type="RESOURCE_LOCAL">
        <class>org.seedstack.seed.persistence.jpa.sample.Item3</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>

    <persistence-unit name="seed-biz-support" transaction-type="RESOURCE_LOCAL">
        <class>org.seedstack.business.jpa.samples.domain.tinyaggregate.TinyAggRoot</class>

        <class>org.seedstack.business.jpa.samples.domain.base.SampleBaseJpaAggregateRoot</class>
        <class>org.seedstack.business.jpa.samples.domain.base.SampleBaseJpaEntity</class>
        <class>org.seedstack.business.jpa.samples.domain.embed.SampleEmbedJpaAggregateRoot</class>
        <class>org.seedstack.business.jpa.samples.domain.embed.SampleEmbedJpaEntity</class>
        <class>org.seedstack.business.jpa.samples.domain.simple.SampleSimpleJpaAggregateRoot</class>
        <class>org.seedstack.business.jpa.samples.domain.simple.SampleSimpleJpaEntity</class>

        <class>org.seedstack.business.jpa.samples.domain.identity.MyAggregate</class>
        <class>org.seedstack.business.jpa.samples.domain.identity.MyEntity</class>

    </persistence-unit>
</persistence>
